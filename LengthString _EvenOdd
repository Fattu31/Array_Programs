//Create an String array which is going to take user input and check which element String lenght is even or odd.
import java.util.Scanner;
class LengthEvenOdd
{
    public static void main(String[] args)
    {    
       //datatype []variablename=new datatype[size];
            String len[]= new String[5]; 

        //Creating a Scanner object of char for user input
             System.out.println("Enter the String of Array:-");
             Scanner sc= new Scanner(System.in);

        // Taking user input for each String in the array
        for (int i=0;i<len.length;i++) 
        {
            len[i] = sc.nextLine( );
        }
        int c=0;
       //Printing all the String and check wheather that String length is even or odd.
       for(int m=0;m<len.length;m++)
       {
          if(len[m].length()%2==0)
          { 
             System.out.println("The Character is:"+len[m]);
             c++;
      
          }
       }
    }
}

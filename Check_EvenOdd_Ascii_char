//Create an char array which is going to take user input and check the char Ascii value is even or odd.
import java.util.Scanner;
class Ascii_char
{
    public static void main(String[] args)
    {    
       //datatype []variablename=new datatype[size];
            char char_arry []= new char[5]; 

        //Creating a Scanner object of char for user input
             System.out.println("Enter the char of Array:-");
             Scanner sc= new Scanner(System.in);

        // Taking user input for each String in the array
        for (int i=0;i<char_arry.length;i++) 
        {
            char_arry[i] = sc.next( ).charAt(0 );
        }
        int c=0;
       //Printing all the char and check wheather that char Ascii value is even or odd .
       for(int m=0;m<char_arry.length;m++)
       {
          if(char_arry[m]%2==0)
          { 
             System.out.println("The Character is:"+char_arry[m]);
             c++;
      
          }
       }
        System.out.println(c);
    }
}
